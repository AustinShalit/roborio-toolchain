#!/bin/zsh

rm -rf tree-install
mkdir tree-install
cp -r gcc-install/* tree-install/
cp -r binutils-install/* tree-install/
cp -r sysroot-install/* tree-install/
cp -r gdb-install/* tree-install/
cd tree-install/c/Users/Public/frc${V_YEAR}/roborio
du -hs .
i686-w64-mingw32-strip bin/*.exe
i686-w64-mingw32-strip arm-frc*/bin/*.exe
find libexec -name \*.exe | xargs i686-w64-mingw32-strip
rm -rf share/info share/man

pushd arm-frc${V_YEAR}-linux-gnueabi/usr/include
patch -p4 < ../../../../../../../../../makes/case-sensitive-includes.diff
popd
rm -rf lib/xtables

du -hs .
